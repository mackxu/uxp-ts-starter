{
  "name": "uxp-ts-starter",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsc && vite build --watch --mode=dev",
    "build": "tsc && vite build",
    "release": "release-it",
    "postinstall": "patch-package"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "plugins": {
      "./scripts/release-it-version-plugin.js": {}
    }
  },
  "devDependencies": {
    "@types/photoshop": "^25.0.4",
    "patch-package": "^8.0.0",
    "release-it": "^17.0.0",
    "typescript": "^5.2.2",
    "uxp-types": "^0.1.3",
    "vite": "^5.0.0"
  }
}
